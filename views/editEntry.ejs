<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main>
  <img src="/img/SE-GitHub-image.png" alt="A huskie" width="100" height="100" />
  <h1>Edit Journal Entry</h1>
  <div id="entryID" data-id="<%= id %>">
    <label
      >Date
      <input
        type="date"
        class="date"
        value="<%= entry.date.toISOString().split('T')[0] %>"
    /></label>
    <fieldset>
      <legend>Habit of Mind:</legend>
      <% for (let habit of habits) { %> <% if (habit == entry.habit) { %>
      <label>
        <input
          type="radio"
          class="habits"
          name="habits"
          value="<%= habit %>"
          checked="true"
        />
        <%= habit %>
      </label>
      <% } else {%>
      <label>
        <input type="radio" class="habits" name="habits" value="<%= habit %>" />
        <%= habit %>
      </label>
      <% } %> <% } %>
    </fieldset>
    <label>
      Journal Entry <textarea class="content"><%= entry.content %></textarea>
    </label>
    <input type="submit" class="submit" value="Submit Edit" />
    <input type="submit" class="delete" value="Delete Entry" />
  </div>
</main>
<!-- /Main Site -->
<script src="/js/editEntry.js"></script>
<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
